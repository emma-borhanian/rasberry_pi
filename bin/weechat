#!/bin/bash
set -e

BASEDIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
cd "$BASEDIR/.."

source "lib/bash_include"

if [[ -f .env ]]; then
  source .env
fi

if [[ ! "$1" ]]; then
  echo "usage: weechat <container name>" >&2
  exit 1
fi

autossh -M 0 -t "$USER_ROOT@$HOST" "docker attach $1"
