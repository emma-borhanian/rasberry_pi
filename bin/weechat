#!/bin/bash
set -e

BASEDIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
cd "$BASEDIR/.."

source "lib/bash_include"

if [[ -f .env ]]; then
  source .env
fi

if [[ ! "$1" ]]; then
  echo "usage: weechat <container name>" >&2
  exit 1
fi


while true; do
  ssh -t -a "$USER_ROOT@$HOST" "docker attach $1" || true
  sleep 1
done
